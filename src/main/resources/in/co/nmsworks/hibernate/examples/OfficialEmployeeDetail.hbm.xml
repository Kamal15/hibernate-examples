<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <joined-subclass extends="in.co.nmsworks.hibernate.examples.EmployeeDetail"
                     name="in.co.nmsworks.hibernate.examples.OfficialEmployeeDetail" table="OFFICIAL_EMPLOYEE_DETAIL">

        <key on-delete="cascade" column="EMPLOYEE_ID"/>
        <property name="salary" type="java.lang.Integer"/>
        <property name="designation"/>

    </joined-subclass>

</hibernate-mapping>

